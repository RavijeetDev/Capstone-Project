<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/dimension_10"
    android:layout_marginBottom="@dimen/dimension_10"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/cast_item"
        android:layout_width="@dimen/dimension_110"
        android:layout_height="@dimen/dimension_110"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/castName"
        android:textSize="@dimen/text_size_13"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterName"
        android:textColor="@color/cast_name_text_color"
        android:textSize="@dimen/text_size_13"/>

</LinearLayout>