<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/gallery_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/download_button"
        android:layout_width="@dimen/dimension_35"
        android:layout_height="@dimen/dimension_35"
        android:src="@drawable/ic_file_download_white"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/dimension_10"
        android:layout_marginBottom="@dimen/dimension_10"
        android:contentDescription="@string/gallery_button_desc"/>

</FrameLayout>