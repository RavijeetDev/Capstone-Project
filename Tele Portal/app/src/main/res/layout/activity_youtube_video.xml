<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/youtube_video_background"
    >

    <fragment
        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
        android:id="@+id/youtube_fragment"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="@dimen/dimension_50"
        android:layout_height="@dimen/dimension_50"
        android:padding="@dimen/dimension_10"
        android:id="@+id/cancelImage"
        android:src="@drawable/ic_action_cancel"
        android:contentDescription="@string/youtube_cancel_button_desc"/>
</RelativeLayout>
